#include <stdint.h>
#include <stdio.h>
#include "main.h"

#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif

//declaration of 4 tasks to schedule them in round-robin fashion:
void task1_handler(void);
void task2_handler(void);
void task3_handler(void);
void task4_handler(void);

//initalization of systick timer
void init_systick_timer(uint32_t tick_hz);
//initalization of scheduler stack
__attribute__((naked)) void init_scheduler_stack(uint32_t sched_top_of_stack);
void init_tasks_stack(void);
void enable_processor_faults(void);

TCB_t user_tasks[MAX_TASKS];

uint8_t current_task = 1; //keep track of current task

uint32_t get_psp_value(void);
__attribute__((naked)) void switch_sp_to_psp(void);

int main(void)
{
    /* Loop forever */
	enable_processor_faults();
	init_scheduler_stack(SCHED_STACK_START);
	init_tasks_stack();
	init_systick_timer(TICK_HZ);
	switch_sp_to_psp();
	for(;;);
}

void init_systick_timer(uint32_t tick_hz)
{
	//Systick Reload(count) Value Register
    uint32_t *pSRVR = (uint32_t*)0xE000E014;
    //Systick Control and Status Register
    uint32_t *pSCSR = (uint32_t*)0xE000E010;

    //Calculate reload value
    uint32_t count_value = (SYSTICK_TIM_CLK / tick_hz) - 1;//-1 because there is one more clock cycle after 0 to reload value

    //Clear existing reload value
    *pSRVR &= ~(0x00FFFFFFFF);

    //Set new reload value
    *pSRVR |= count_value;

    // Configure SCSR:
    *pSCSR |= (1 << 1);  // Enable SysTick exception request
    *pSCSR |= (1 << 2);  // Set clock source as processor clock
    *pSCSR |= (1 << 0);  // Enable the SysTick counter
}

