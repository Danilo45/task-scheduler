__attribute__((naked)) void init_scheduler_stack(uint32_t sched_top_of_stack){
    __asm volatile("MSR MSP,%0": :  "r" (sched_top_of_stack)  :   );
    __asm volatile("BX LR");
}

void init_tasks_stack(void){
    uint32_t *pPSP;

    for (int i = 0; i < MAX_TASKS; i++)
    {
        pPSP = (uint32_t *)user_tasks[i].psp_value;

        pPSP--;
        *pPSP = DUMMY_XPSR;

        pPSP--; // PC
        *pPSP = user_tasks[i].task_handler;

        pPSP--; // LR
        *pPSP = 0xFFFFFFFD;

        //registers
        for (int j = 0; j < 13; j++)
        {
            pPSP--;
            *pPSP = 0;
        }

        user_tasks[i].psp_value = (uint32_t)pPSP;
    }
}

void enable_processor_faults(void){
    uint32_t *pSHCSR = (uint32_t *)0xE000ED24;

    *pSHCSR |= (1 << 16); // mem manage
    *pSHCSR |= (1 << 17); // bus fault
    *pSHCSR |= (1 << 18); // usage fault
}

void HardFault_Handler(void)
{
    printf("Exception : Hardfault\n");
    while (1);
}

void MemManage_Handler(void)
{
    printf("Exception : MemManage\n");
    while (1);
}

void BusFault_Handler(void)
{
    printf("Exception : BusFault\n");
    while (1);
}

uint32_t get_psp_value(void){
    return user_tasks[current_task].psp_value;
}

__attribute__((naked)) void switch_sp_to_psp(void){
    // 1. initialize the PSP with TASK1 stack start address

    // get the value of psp of current_task
    __asm volatile("PUSH {LR}"); // preserve LR which connects back to main()
    __asm volatile("BL get_psp_value");
    __asm volatile("MSR PSP,R0"); // initialize psp with what function returned
    __asm volatile("POP {LR}");   // pops back LR value

    // 2. change SP to PSP using CONTROL register
    __asm volatile("MOV R0,#0X02"); //mov value 0x02 in R0
    __asm volatile("MSR CONTROL,R0"); //mov that value from r0 to special reg CONTROL
    __asm volatile("BX LR"); //back to main
}
